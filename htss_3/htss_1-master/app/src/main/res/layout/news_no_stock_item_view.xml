<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="3dp"
    android:layout_marginHorizontal="6dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/news_date"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/timeline_background"
            android:paddingHorizontal="6dp"
            android:paddingVertical="3dp"
            android:text="23-02-10"
            android:textColor="@color/dark_brown" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/news_provider"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:text="제공사"
                android:textColor="@color/brown" />

            <TextView
                android:id="@+id/news_contents"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="9"
                android:padding="5dp"
                android:singleLine="true"
                android:text="고금리 불안에 증시 '혼조'..."
                android:textColor="@color/navy"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/news_link_btn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:src="@drawable/baseline_link_24" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>