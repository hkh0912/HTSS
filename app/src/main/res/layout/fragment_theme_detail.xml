<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.ThemeDetailFragment"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/back2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_baseline_arrow_circle_left_24"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="3dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@color/white"
            android:elevation="20dp"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/theme_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:text="쿠팡 관련주"
                    android:textSize="8pt"
                    android:textStyle="bold" />
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/theme_value_plus"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="+10%"
                        android:textColor="@color/blue"
                        android:textSize="6pt"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/theme_value_minus"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="+10%"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:textColor="@color/red"
                        android:textSize="6pt"
                        android:visibility="gone"
                        android:textStyle="bold" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="종목명"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:padding="10dp"
                    android:textSize="7pt"
                    android:background="@drawable/stroke_background"
                    android:layout_weight="5" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/stroke_background"
                    android:text="현재가"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="7pt"
                    android:padding="10dp"
                    android:layout_weight="2"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="전일대비"
                    android:gravity="center"
                    android:padding="10dp"
                    android:textSize="7pt"
                    android:textColor="@color/black"
                    android:background="@drawable/stroke_background"
                    android:layout_weight="3"/>
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/theme_detail1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                />

            <TextView
                android:id="@+id/theme_detail_open_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corner2"
                android:gravity="center"
                android:padding="3dp"
                android:text="펼치기"
                android:textColor="@color/black"
                android:textSize="7pt"/>
            <TextView
                android:id="@+id/theme_detail_close_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corner2"
                android:gravity="center"
                android:padding="2dp"
                android:text="접기"
                android:textColor="@color/black"
                android:textSize="7pt"
                android:visibility="gone" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@color/white"
            android:elevation="20dp"
            android:orientation="vertical"
            android:padding="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/theme_name2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:text="쿠팡 관련주"
                    android:textSize="8pt"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="포함된 뉴스"
                    android:textColor="@color/gray"
                    android:textSize="8pt"
                    android:textStyle="bold" />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/theme_detail2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                />
            <TextView
                android:id="@+id/theme_include_news_open_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corner2"
                android:gravity="center"
                android:padding="3dp"
                android:textColor="@color/black"
                android:text="펼치기"
                android:textSize="7pt" />
            <TextView
                android:id="@+id/theme_include_news_close_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corner2"
                android:gravity="center"
                android:padding="2dp"
                android:text="접기"
                android:textColor="@color/black"
                android:textSize="7pt"
                android:visibility="gone"/>
        </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>