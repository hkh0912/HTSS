<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:orientation="horizontal"
    tools:ignore="MissingDefaultResource">

    <TextView
        android:id="@+id/stock_raise_rank"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_margin="5dp"
        android:background="@drawable/rounded_corner"
        android:gravity="center"
        android:text="1"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:textSize="15sp"
        android:fontFamily="@font/one_mobile_pop" />

    <TextView
        android:id="@+id/stock_raise_name"
        android:layout_width="0dp"
        android:layout_weight="4.5"
        android:layout_height="match_parent"
        android:gravity="left|center_vertical"
        android:layout_marginStart="3dp"
        android:text="샌즈랩"
        android:textColor="@color/black"
        android:fontFamily="@font/one_mobile_pop"
        android:textSize="15sp" />
    <TextView
        android:id="@+id/stock_raise_price"
        android:layout_width="0dp"
        android:layout_weight="1.5"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_marginStart="3dp"
        android:text="9200"
        android:textColor="@color/black"
        android:fontFamily="@font/one_mobile_pop"

        android:textSize="11sp" />

    <TextView
        android:id="@+id/stock_raise_minuspercent"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="match_parent"
        android:text="-0.5%"
        android:textStyle="bold"
        android:textColor="@color/red"
        android:gravity="right|center"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/stock_raise_pluspercent"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="match_parent"
        android:layout_marginStart="3dp"
        android:text="+0.5%"
        android:textColor="@color/blue"
        android:gravity="right|center"
        android:textSize="13sp"
        android:fontFamily="@font/one_mobile_pop"
        android:visibility="gone" />

