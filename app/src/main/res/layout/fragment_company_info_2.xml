<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="left"
            android:text="시가총액"
            android:layout_weight="5"
            android:textColor="@color/black"
            android:id="@+id/total_current1"
            android:textSize="18sp"
            android:fontFamily="@font/one_mobile_pop" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="5"
            android:text="382466억원"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:id="@+id/total_current2"
            android:fontFamily="@font/one_mobile_pop" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:textSize="15dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:fontFamily="@font/one_mobile_pop"
            android:gravity="left"
            android:text="PER"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:id="@+id/per1"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:fontFamily="@font/one_mobile_pop"
            android:gravity="center"
            android:text="|"
            android:textColor="@color/black"
            android:textSize="18sp" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:fontFamily="@font/one_mobile_pop"
            android:gravity="center"
            android:text="EPS"
            android:textColor="@color/black"
            android:id="@+id/eps1"
            android:textSize="18sp" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:fontFamily="@font/one_mobile_pop"
            android:gravity="right"
            android:text="200.20배"
            android:id="@+id/per2"
            android:textColor="@color/black"
            android:textSize="18sp" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:fontFamily="@font/one_mobile_pop"
            android:gravity="right"
            android:text="|"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="4"
            android:text="22413원"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:id="@+id/eps2"
            android:fontFamily="@font/one_mobile_pop" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:textSize="15dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:fontFamily="@font/one_mobile_pop"
            android:gravity="center_vertical"
            android:text="추정PER"
            android:textColor="@color/black"
            android:textSize="11sp"
            android:id="@+id/est_per1"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:fontFamily="@font/one_mobile_pop"
            android:gravity="center"
            android:text="|"
            android:textColor="@color/black"
            android:textSize="18sp" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:fontFamily="@font/one_mobile_pop"
            android:gravity="center"
            android:text="추정EPS"
            android:textColor="@color/black"
            android:id="@+id/est_eps1"
            android:textSize="11sp" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3.5"
            android:fontFamily="@font/one_mobile_pop"
            android:gravity="right"
            android:text="210.20배"
            android:id="@+id/est_per2"
            android:textColor="@color/black"
            android:textSize="18sp" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:fontFamily="@font/one_mobile_pop"
            android:gravity="right"
            android:text="|"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="3.5"
            android:text="22413원"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:id="@+id/est_eps2"
            android:fontFamily="@font/one_mobile_pop" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:textSize="15dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="left"
            android:text="PBR"
            android:layout_weight="5"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:id="@+id/pbr"
            android:fontFamily="@font/one_mobile_pop" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="5"
            android:text="4.46배"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:id="@+id/pbr2"
            android:fontFamily="@font/one_mobile_pop" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="left"
            android:text="배당수익률"
            android:layout_weight="5"
            android:textColor="@color/black"

            android:textSize="18sp"
            android:fontFamily="@font/one_mobile_pop" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="5"
            android:text="50.01%"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:fontFamily="@font/one_mobile_pop" />
    </LinearLayout>


</LinearLayout>